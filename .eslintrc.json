{
  "plugins": ["import", "prettier"],
  "extends": ["airbnb-base", "plugin:import/errors", "plugin:import/warnings", "plugin:prettier/recommended"],
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 14,
    "sourceType": "module"
  },
  "ignorePatterns": ["dist/", "legacy/"],
  "rules": {
    "prettier/prettier": ["error", { "printWidth": 250 }]
  }
}
