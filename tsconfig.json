{
  "include": [
    "src/**/*.js",
    "src/**/*.mjs",
    "src/**/*.cjs",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.cts",
    "src/**/*.tsx"
  ],
  "exclude": ["src/**/*.test.js", "src/**/*.test.ts"],
  "compilerOptions": {
    /* Modules */
    "paths": {
      "@/*": ["./src/*"] // Map the '@' alias to the 'src' directory.
    },

    /* Emit */
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "build",

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": true,

    /* Language and Environment */
    "jsx": "react-jsx"
  }
}
