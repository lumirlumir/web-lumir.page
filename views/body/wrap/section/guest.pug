s_guest
  .comments
    .post-header
      h1 방명록

    s_guest_input_form
      .comment-form
        s_guest_member
          .field
            s_guest_form
              input(type="text" name="[##_guest_input_name_##]" placeholder="이름" value="[##_guest_name_##]")
              input(type="password" name="[##_guest_input_password_##]" placeholder="암호" value="[##_guest_password_##]")
        textarea(name="[##_guest_textarea_body_##]" cols="" rows="4" placeholder="여러분의 소중한 댓글을 입력해주세요.")
        .submit
          button(type="submit" class="btn" onclick="[##_guest_onclick_submit_##]") 등록

    s_guest_container
      .comment-list
        ul
          s_guest_rep
            li
              .author-meta
                img(src="//t1.daumcdn.net/tistory_admin/static/skin/avatar_default.gif" class="avatar" alt="프로필사진")
                span.nickname [##_guest_rep_name_##]
                span.date [##_guest_rep_date_##]
                span.control
                  button(type="button") 더보기
                  .link
                    a(href="#" onclick="[##_guest_rep_onclick_delete_##]") 수정/삭제
              .
                <p>[##_guest_rep_desc_##]<br>
                <a href="#" class="reply" onclick="[##_guest_rep_onclick_reply_##]">답변</a></p>
              s_guest_reply_container
                ul
                  s_guest_reply_rep
                    li
                      .author-meta
                        img(src="//t1.daumcdn.net/tistory_admin/static/skin/avatar_default.gif" class="avatar" alt="프로필사진")
                        span.nickname [##_guest_rep_name_##]
                        span.date [##_guest_rep_date_##]
                        span.control
                          button(type="button") 더보기
                          .link
                            a(href="#" onclick="[##_guest_rep_onclick_delete_##]") 수정/삭제
                      .
                        <p>[##_guest_rep_desc_##]</p>
